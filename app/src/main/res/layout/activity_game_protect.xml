<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg1"
    tools:context="com.example.duan.duan.DCZ_activity.GameProtectActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/bg_title2"/>
    <RelativeLayout
        style="@style/Title"
        android:background="@color/bg_title2">
        <include
            android:id="@+id/back"
            layout="@layout/layout_back2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="游戏保护"
            android:textColor="@color/text_title2"
            android:textSize="@dimen/title" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xian"
            android:background="@color/xian1"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text06"
        android:textSize="@dimen/text01"
        android:padding="@dimen/left"
        android:text="开启游戏保护，保护资金安全"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/left">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            fresco:placeholderImage="@mipmap/zhanwei"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundedCornerRadius="5dp"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"/>
        <TextView
            android:layout_toRightOf="@id/sdv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text01"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text05"
            android:text="王者荣耀"/>
        <com.example.duan.duan.DCZ_selft.SwitchButton
            android:id="@+id/button1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:kswTextOff="Off"
            app:kswTextOn="On"
            app:kswTintColor="@color/white"
            app:kswBackDrawable="@drawable/ios_back_drawable"
            android:textColor="@color/custom_text_state_color"
            android:textSize="16dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/left">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            fresco:placeholderImage="@mipmap/zhanwei"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundedCornerRadius="5dp"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/sdv2"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text01"
            android:textColor="@color/text05"
            android:text="阴阳师"/>
        <com.example.duan.duan.DCZ_selft.SwitchButton
            android:id="@+id/button2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:kswTextOff="Off"
            app:kswTextOn="On"
            app:kswTintColor="@color/white"
            app:kswBackDrawable="@drawable/ios_back_drawable"
            android:textColor="@color/custom_text_state_color"
            android:textSize="16dp"/>
    </RelativeLayout>
</LinearLayout>
