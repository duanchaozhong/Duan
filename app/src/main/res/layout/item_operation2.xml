<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="30dp"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="@dimen/xian2"
            android:layout_height="20dp"
            android:background="@color/text01"
            android:layout_below="@id/tvDot" />
        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/yuan"/>
        <TextView
            android:layout_width="@dimen/xian2"
            android:background="@color/text01"
            android:layout_height="match_parent"
            android:layout_below="@id/tvDot" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text05"
                android:textSize="@dimen/text01"
                android:text="支付宝钱包"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text06"
                android:textSize="@dimen/text02"
                android:layout_marginTop="2dp"
                android:text="广东-深圳"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text01"
            android:textColor="@color/text05"
            android:text="17:58"/>
    </RelativeLayout>
</LinearLayout>